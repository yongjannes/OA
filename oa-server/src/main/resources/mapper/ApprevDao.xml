<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sf.demo.dao.ApprevDao">

    <select id="findApprevList" resultType="com.sf.demo.model.Leave" >
        select
            l.*,e.e_name
        from t_leave l
                join t_emp e on l.e_id = e.e_id

        <where>
            l.e_id = #{e_id}
            <if test="l_id != null and l_id != '' ">
                and instr(l_id,#{l_id}) > 0
            </if>
            <if test="l_cause != null and l_cause != '' ">
                and instr(l_cause,#{l_cause}) > 0
            </if>
            <if test="l_status != null ">
                and l_status = #{l_status}
            </if>
        </where>
        order by
            l_submit_date desc
    </select>

    <delete id="deleteLeave">
        delete from t_leave
        <where>
            <foreach collection="l_ids" item="l_id" separator="or" open="" close="">
                l_id = #{l_id}
            </foreach>
        </where>
    </delete>

    <select id="findExistNotSubmited" resultType="boolean" >
        select
            count(l_id)
        from t_leave
        where
            l_status > 0 and
            <foreach collection="l_ids" item="l_id" separator="or" open="(" close=")">
                l_id = #{l_id}
            </foreach>
    </select>

</mapper>